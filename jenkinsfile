pipeline {
  agent any
  tools{
    maven 'localMaven'
  }
  parameters {
    string(name: 'tomcat_dev', defaultValue: '54.255.207.15', description: 'Staging Server')
    string(name: 'tomcat_prod', defaultValue: '13.229.129.228', description: 'Production Server')
  }

  triggers {
    pollSCM('* * * * *')
  }

  stages{
    stage('Build'){
      steps {
        sh 'mvn clean package'
      }
      post {
        success {
          echo 'Now Archiving...'
          archiveArtifacts artifacts: '**/target/*.war'
        }
      }
    }

    stage ('Deployments'){
      parallel{
        stage ('Deploy to Staging'){
          steps {
            sh "cp -i /var/jenkins_home/tomcat.pem /var/jenkins_home/workspace/Package-pipeline/webapp/target/*.war ec2-user@52.221.199.44:/usr/share/tomcat7/webapps"
          }
        }

        // stage ("Deploy to Production"){
        //     steps {
        //         sh "cp -i /var/jenkins_home/tomcat.pem /var/jenkins_home/workspace/Package-pipeline/webapp/target/*.war ec2-user@ec2-54-255-207-15.ap-southeast-1.compute.amazonaws.com:/usr/share/tomcat7/webapps"
        //     }
        // }
      }
    }
  }
}
